%tr{ :class => cycle :odd, :even }
  %td= h(cosas_por_sacar.id)
  %td
  = detalles(cosas_por_sacar)
  %td= h(cosas_por_sacar.cantidad)
  %td= text_field_tag "inventario[sacar_#{cosas_por_sacar.id}]", cosas_por_sacar.por_sacar ,:size => 2
  = observe_field "inventario[sacar_#{cosas_por_sacar.id}]".to_sym, :url => cantidad_update_javascripts_path, :frequency => 0.25, :with => "'id=' + #{cosas_por_sacar.id} + '&cantidad=' + value"
