<% form_tag({},{:method => 'get'}) do %>
<% searchables(Marca,Tipo,Genero,Estilo,Color,Talla)  %>
<table id="search-results">
	<tr>	
		<th>Cantidad</th>
		<%= yield :searchable_label %>
		<%= yield :avanzado_search_labels %>
	</tr>
	<tr>	
		<td><%= cantidad_txt_field %></td>
		<%= yield :searchable %>	
		<%= yield :avanzado_search %>
		<td></td>
		<td>	
			<%= submit_tag 'Buscar' %>
			<%= submit_tag 'Limpiar' %>
		</td>
	</tr>
</table>
<% end %>